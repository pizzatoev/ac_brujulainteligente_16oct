<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7E2B6">

    <!-- Brújula (tu imagen) -->
    <ImageView
        android:id="@+id/imgBrujula"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/brujula"
        android:contentDescription="@string/compass_cd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/panelInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- Mensaje flotante (visible cuando apunta al norte) -->
    <TextView
        android:id="@+id/tvNorthMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Norte detectado — puedes activar el escáner"
        android:paddingHorizontal="14dp"
        android:paddingVertical="8dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_badge_pastel"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/imgBrujula"
        app:layout_constraintEnd_toEndOf="@+id/imgBrujula"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp" />

    <!-- Botón redondo de cámara -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnOpenCamera"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/iconocamara"
        android:contentDescription="@string/open_camera"
        android:backgroundTint="#4A76B5"
        app:tint="@android:color/white"
        app:borderWidth="0dp"
        app:rippleColor="#1A000000"
        app:layout_constraintTop_toBottomOf="@+id/imgBrujula"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp" />

    <!-- Panel inferior redondo -->
    <androidx.cardview.widget.CardView
        android:id="@+id/panelInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#CCFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_card_pastel">

            <TextView
                android:id="@+id/tvHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0° (N)"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#2C4A72" />

            <TextView
                android:id="@+id/tvMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modo actual: Solo brújula"
                android:textSize="15sp"
                android:textColor="#2C4A72"
                android:layout_marginTop="4dp"/>

            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_marginVertical="8dp"
                android:background="#4A76B5"/>

            <TextView
                android:id="@+id/tvDetection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ML Kit: sin detección"
                android:textSize="15sp"
                android:textColor="#F28B82"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consejo: mueve el teléfono en forma de 8 para calibrar."
                android:textSize="13sp"
                android:textColor="#444444"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>