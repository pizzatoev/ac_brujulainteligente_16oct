<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bru_fondo">

    <!-- Contenido principal centrado -->
    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/titulo"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/imgBrujula"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:contentDescription="@string/compass_cd"
            android:src="@drawable/brujula" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/panelInfo"
                android:layout_width="320dp"
                android:layout_height="110dp"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_card_pastel"
                android:orientation="vertical"
                android:layout_marginEnd="15dp"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0° (N)"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Modo actual: Solo brújula"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <View
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:layout_marginVertical="8dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tvDetection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ML Kit: sin detección"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnOpenCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconocamara3"
        android:contentDescription="@string/open_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#FFFFFF"
        app:tint="#b1caad"
        android:layout_margin="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
